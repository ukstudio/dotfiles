[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[diff]
	algorithm = histogram
	compactionHeuristic = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[include]
